<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/yearsToRepay"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Enter # Years to Repay"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loanAmount" />

    <EditText
        android:id="@+id/loanAmount"
        android:layout_width="189dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter Loan Amount"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup7"
        android:layout_width="314dp"
        android:layout_height="366dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <RadioButton
            android:id="@+id/da"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Analyst"
            android:onClick="enterCareer"/>

        <RadioButton
            android:id="@+id/am"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Manager"
            android:onClick="enterCareer"/>

        <RadioButton
            android:id="@+id/ra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Research Assistant"
            android:onClick="enterCareer"/>

        <RadioButton
            android:id="@+id/fa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Financial Analyst"
            android:onClick="enterCareer"/>

        <RadioButton
            android:id="@+id/sa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sales Associate"
            android:onClick="enterCareer"/>

        <RadioButton
            android:id="@+id/cm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Case Manager"
            android:onClick="enterCareer"/>

        <RadioButton
            android:id="@+id/smm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Social Media Manager"
            android:onClick="enterCareer"/>

        <RadioButton
            android:id="@+id/ta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teaching Assistant"
            android:onClick="enterCareer"/>

        <RadioButton
            android:id="@+id/se"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Software Engineer"
            android:onClick="enterCareer"/>

        <RadioButton
            android:id="@+id/aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Administrative Assistant"
            android:onClick="enterCareer"/>
    </RadioGroup>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="moneyForLoansPerMonth"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup7"
        app:layout_constraintVertical_bias="0.258" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Career"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yearsToRepay" />

</androidx.constraintlayout.widget.ConstraintLayout>
